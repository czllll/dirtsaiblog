---
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<div class="avatar-container group w-24 h-24 rounded-full overflow-hidden cursor-pointer">
  <img src={src} alt={alt} class="w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:rotate-360" />
</div>


<style>
  @keyframes rotate360 {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  .group:hover img {
    animation: rotate360 0.2s linear;
  }
</style>