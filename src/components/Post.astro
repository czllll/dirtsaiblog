---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import { format, parse } from 'date-fns';

import {
  Card,
  CardDescription,
  CardHeader,
  CardTitle,
  CardContent,
} from "./ui/card";
import { marked } from "marked";

// import CategoryList from "./CategoryList.astro"

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;

function getTagUrl(tag: string | number | boolean) {
  return `/tags/${encodeURIComponent(tag)}`;
}

function formatDate(dateString: string) {
  const date = parse(dateString, 'dd/MM/yyyy', new Date());
  return format(date, 'yyyy-MM-dd');
}


---

<Card className="flex overflow-hidden h-[28vh]">
  <a href=`/blog/${post.slug}` class="w-2/5 object-cover">
    <Image src={post.data.image} alt="" class="w-full h-full object-cover" />
  </a>
  <div class="flex flex-col w-3/5 px-6 justify-center">
    <CardHeader className="py-3">
      <a href=`/blog/${post.slug}` class="hover:text-teal-500">
        <CardTitle className="font-normal">{post.data.title}</CardTitle>
      </a>
    </CardHeader>
    <CardContent>
      <p class="text-sm text-muted-foreground">
        {formatDate(post.data.date)} |
        {post.data.tags.map((tag, index) => (
          <>
            <a 
              href={getTagUrl(tag)} 
              class="hover:underline text-teal-500"
            >
              #{tag}
            </a>
            {index < post.data.tags.length - 1 ? " " : ""}
          </>
        ))}
      </p>
      <div class="mt-3 text-lg line-clamp-2">
        <span set:html={marked.parse(post.body)}></span>
      </div>
    </CardContent>
  </div>
</Card>
