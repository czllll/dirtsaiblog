---
import { Card } from '@/components/ui/card'
import { Avatar } from '@/components/ui/avatar'
import { Button } from '@/components/ui/button'
import AvatarImage from './AvatarImage.astro'
import { getCollection, type CollectionEntry } from 'astro:content';
const allBlogPosts = await getCollection('posts');
const totalPosts = allBlogPosts.length;
async function getTags() {
  const posts = await getCollection('posts');
  const tags = [...new Set(posts.map((post) => post.data.tags).flat())];
  return tags.length;
}

---

<Card className="w-full bg-background/70 shadow-lg rounded-lg overflow-hidden">
  <div class="p-8">
    <div class="flex flex-col items-center">
      <AvatarImage src="/veg.png" alt="Dirtsai" />
      <h2 class="text-xl font-semibold mb-1">Dirtsai</h2>
      <p class="text-sm text-gray-500 mb-4">海浪滔滔我不怕</p>
      <div class="flex justify-between w-full mb-4 px-10">
        <a class="text-center" href="/blog/1">
          <p class="font-bold">{totalPosts}</p>
          <p class="text-xs text-gray-500">Articles</p>
        </a>
        <a class="text-center" href="/tags">
          <p class="font-bold">{getTags()}</p>
          <p class="text-xs text-gray-500">Tags</p>
        </a>
      </div>
      <Button className="w-full bg-gradient-to-r from-teal-400 to-cyan-400 dark:from-teal-800 dark:to-cyan-900 hover:bg-gradient-to-r hover:from-teal-500 hover:to-cyan-500 text-white mt-4">
        Follow Me
      </Button>
    </div>
  </div>
  <div class="flex justify-center space-x-4 p-4 bg-background/70">
    <a href="https://github.com/czllll" class="text-gray-500 hover:text-gray-700">
